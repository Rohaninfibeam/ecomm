<html>
<head>
  <title>
    <%= content_for?(:title) ? "#{site_name}: #{yield(:title)}" : site_name %>
  </title>
  <link rel="shortcut icon" href="/assets/favicon.ico" />

  <%= stylesheet_link_tag "normalize.css" %>
  <%= stylesheet_link_tag "application.css" %>
  <%= stylesheet_link_tag 'site/app.css' %>
  <%= stylesheet_link_tag 'slick.css' %>
  <%= stylesheet_link_tag 'slick-theme.css' %>
  <%= stylesheet_link_tag 'bootstrap.css' %>
  <%= stylesheet_link_tag 'bootstrap-theme.css' %>
  <%= javascript_include_tag 'jquery-3.2.1.min' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'bootstrap' %>
  <%= javascript_include_tag 'npm' %>
  <!--[if lt IE 8]
  <%= stylesheet_link_tag('ie.css', media: 'screen, projection')%>
  <![endif]-->
  <!--[if lt IE 7]
  <%= stylesheet_link_tag('ie6.css', media: 'screen, projection') %>
  <![endif]-->
  <%= csrf_meta_tag %>

  <%= yield :head %>

  <%= render 'shared/metadata' %>

</head>
<body >
<div id='body_wrapper container-fluid'>

  <%= render partial: '/shared/welcome_header_new'%>

  <% if notice || alert %>
      <div class="flash_notice callout <%= !!alert ? 'alert' : 'warning' %>" data-closable>
        <div>
        <% if alert %>
          <%= alert %>
        <% elsif notice %>
          <%= notice %>
        <% end %>
        </div>
        <button class="close-button" aria-label="Close alert" type="button"  data-close>
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
  <% end %>

    <div id='content_wrapper' class='container <%= "myaccount" if myaccount_tab %> '>
      <% if myaccount_tab %>
        <h1 style='text-align:center;'><%= site_name %></h1>
        <hr class="first_double_hr">
        <hr class="second_double_hr">
        <%= render :partial => '/shared/myaccount_subheader' %>
      <% end %>
      <%= yield %>
    </div>
    <div id='prefooter_wrapper'>&nbsp;</div>
</div>
  <%= render 'shared/main_footer' %>
  <%= render 'shared/google_analytics' unless @disable_ga %>
  <%= yield :bottom %>

  <script>
  jQuery(window).ready(
    function() {
      jQuery('.flash_notice').delay(6000).slideUp( 'slow');
      jQuery('.flash_error').delay(6000).slideUp( 'slow');
    }
  );
  </script>

</body>
  <%= yield :below_body %>
</html>
