<%= stylesheet_link_tag "header.css" %>
<div class="container-fluid header">
	<div class="top-bar row">
		<div class="logo col-md-3 col-sm-3">
			<%=image_tag('logo.png',id: "logo")%>
		</div>
		<div class="my-account-search col-md-9 col-sm-9">
			<div class="my-account row">
				<div class="dropdown">
					<a class="dropdown-toggle" type="button" data-toggle="dropdown">My Account<span class="caret"></span></a>
					<ul class="dropdown-menu">
						<% unless current_user %>
	            			<li><%= link_to 'Login',  login_path %></li>
	          			<% else %>
				            <% if current_user.admin? %>
				              <li><%= link_to 'Admin', admin_users_path %></li>
				            <% end %>
				            <li class="divider"></li>
				            <li>
				              <%= link_to myaccount_overview_path do %>
				                <label>Account</label>
				              <% end %>
				            </li>
				            <li><%= link_to 'order', myaccount_orders_path %></li>
				            <li><%= link_to 'Addresses', myaccount_addresses_path %></li>
				            <li><%= link_to 'Credit Cards', myaccount_credit_cards_path %></li>
				            <li><%= link_to 'Credits', myaccount_store_credit_path %></li>
				            <li class="divider"></li>
				            <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
				        <% end -%>
			        </ul>
				</div>
			</div>
			<div class="search-cart row">
				<div class="search col-md-9 col-sm-9">
					<div class="row">
						<%=form_tag('products/search',method: :get) do%>
						<div class="col-md-8 col-sm-8 search">
							<%= text_field_tag('query', nil, placeholder:'  Enter your search query here....' )%>
						</div>
						<div class="col-md-1 col-sm-1 submit">
							<%= submit_tag("")%>
						</div>
						<% end %>
					</div>
				</div>
				<div class="cart col-md-3 col-sm-3">
					<%= link_to( image_tag("shopping-cart.png",id: "kart"), shopping_cart_items_path) %>
				</div>
			</div>
		</div>
	</div>
</div>